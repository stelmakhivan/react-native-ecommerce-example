{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "components/*": ["src/components/*"],
      "constants/*": ["src/constants/*"],
      "utils/*": ["src/utils/*"],
      "hooks/*": ["src/hooks/*"],
      "navigators/*": ["src/navigators/*"],
      "screens/*": ["src/screens/*"],
      "api/*": ["src/api/*"],
      "e2e/*": ["e2e/*"]
    },
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}
